<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="triangle" class="org.himanshu.spring.Triangle">
		<property name="A" ref="zeroPoint" />
		<property name="B">
			<bean class="org.himanshu.spring.Point">
				<property name="x" value="-20" />
				<property name="y" value="0" />
			</bean>
		</property>
		<property name="C">
			<bean id="secondPoint" class="org.himanshu.spring.Point">
				<property name="x" value="0" />
				<property name="y" value="20" />
			</bean>
		</property>
	</bean>

	<bean id="zeroPoint" class="org.himanshu.spring.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<alias name="triangle" alias="tri-alias"/>


</beans>